# UterusScope-AI Configuration
# Copy this file to .env and modify as needed

# ═══════════════════════════════════════════════════════════════════
# Model Configuration
# ═══════════════════════════════════════════════════════════════════

# Backbone architecture: swin_tiny, swin_small, swin_base
MODEL_BACKBONE=swin_tiny

# Pretrained weights: imagenet, radimagenet, none
PRETRAINED_WEIGHTS=imagenet

# Device: cuda, cpu, mps (for Apple Silicon)
DEVICE=cuda

# Model checkpoint path (optional, for fine-tuned models)
MODEL_CHECKPOINT_PATH=

# ═══════════════════════════════════════════════════════════════════
# Processing Configuration
# ═══════════════════════════════════════════════════════════════════

# Input image size (height, width)
INPUT_SIZE=224

# Frames per second for video extraction
VIDEO_FPS=5

# Maximum frames to process per video
MAX_FRAMES=100

# Batch size for inference
BATCH_SIZE=8

# ═══════════════════════════════════════════════════════════════════
# API Configuration
# ═══════════════════════════════════════════════════════════════════

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Enable debug mode (set to false in production)
API_DEBUG=true

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ═══════════════════════════════════════════════════════════════════
# Report Configuration
# ═══════════════════════════════════════════════════════════════════

# Output directory for generated reports
REPORT_OUTPUT_DIR=./reports

# Default report format: pdf, html
DEFAULT_REPORT_FORMAT=pdf

# Include heatmaps in reports
INCLUDE_HEATMAPS=true

# ═══════════════════════════════════════════════════════════════════
# Clinical Thresholds
# ═══════════════════════════════════════════════════════════════════

# Endometrial thickness thresholds (mm)
THICKNESS_MIN_NORMAL=5.0
THICKNESS_MAX_NORMAL=10.0
THICKNESS_ALERT_HIGH=15.0

# Vascularity alert threshold (type number, 0-3)
VASCULARITY_ALERT_THRESHOLD=3

# Fibrosis score thresholds
FIBROSIS_NORMAL_MAX=0.3
FIBROSIS_ALERT_THRESHOLD=0.5

# ═══════════════════════════════════════════════════════════════════
# Logging Configuration
# ═══════════════════════════════════════════════════════════════════

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, logs to stdout if not set)
LOG_FILE_PATH=

# ═══════════════════════════════════════════════════════════════════
# Data Configuration
# ═══════════════════════════════════════════════════════════════════

# Directory for synthetic data generation
SYNTHETIC_DATA_DIR=./data/synthetic

# Cache directory for downloaded models
MODEL_CACHE_DIR=./cache/models
